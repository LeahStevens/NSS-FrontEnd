!!! 5
%html{lang: 'en'}
  %head
    %meta{charset: 'utf-8'}
    %title Qunit Template
    %link{rel: 'stylesheet', href: 'css/normalize.css'}
    %link{rel: 'stylesheet', href: 'css/style.css'}
  %body
    #section
      %h1 To-Do:
      %input#due_date{type: 'text', placeholder: 'Due Date'}
      %input#task{type: 'text', placeholder: 'Task'}
      %input#color{type: 'text', placeholder: 'Color'}
      %input#button{type: 'button', value: "Add to List"}
    #section
      %h2 Task List
      %table
        %th Due Date
        %th Task
        %th Color
        %th Done?
        %th Remove?
        %th Up/Down
    %script{src:'js/jquery-1.10.2.min.js'}
    %script{src:'js/underscore-min.js'}
    %script{src:'js/main.js'}
