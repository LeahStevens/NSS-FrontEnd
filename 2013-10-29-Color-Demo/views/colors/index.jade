extends ../template/layout



block content
  .row
    .small-12.columns
      h1 Colors Page
      a.button.small.success(href='../') Home Page
  .row
    .small-12.columns
      - var width = (100 / colors.length);
      table#colors
        thead: tr
          each color in colors
            th= color
          tbody: tr
            each color in colors
              td.color(style='background-color:#{color};width:#{width}%;')