extends ../template/layout

block content
  .row
    .small-12.columns
      h1.subheader Posts
  .row
    .small-12.columns
      a.button.small(href='/') Home
      a.button.small(href='/posts') Posts
      a.button.small.success(href='/posts/new') New
  .row
    .small-12.columns
      #posts
        each post in posts
          .post
            h2.subheader
              a(href='/posts/#{post.id}')= post.title
            span= post.author
            span= post.date
            p= post.tags
            img(src=post.image)
            p= post.content
            p
              form(action='/posts/#{post.id}', method='post')
                input(type='hidden', name='_method', value='delete')
                button.tiny.alert(type='submit') Delete