extends ../template/layout

block content
  .row
    .small-12.columns
      h1.subheader= post.date
  .row
    .small-12.columns
      a.button.small(href='/') Home
      a.button.small(href='/posts') Posts
      a.button.small.success(href='/posts/new') New
  .row
    .small-12.columns
      .post
        h2.subheader= post.title
        span= post.author
        p= post.tags
        p= post.content
        img(src=post.image)
