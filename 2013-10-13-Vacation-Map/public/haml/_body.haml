#left
  #map-canvas
#right
  .row
    .small-12.columns
      %h1 Vacation Map
  .row
    .small-8.columns
      %input#zoom{type: 'text', placeholder: '10'}
    .small-4.columns
      %input#set-zoom.button.radius.small{type: 'button', value: 'Set Zoom'}
  .row
    .small-6.columns
      %input#location{type: 'text', placeholder: 'China'}
    .small-6.columns
      %input#add-location.button.radius.small.success{type: 'button', value: 'Add Location'}
  .row
    .small-6.columns
      %select#location-select
        %option Select a Location
    .small-6.columns
      %input#go-location.button.radius.small.alert{type: 'button', value: 'Go to Location'}
