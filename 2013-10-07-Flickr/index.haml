%head
  %meta{charset: "utf-8"}
  %meta{name: "viewport", content: "width=device-width"}
  %title Foundation 4
  %link{rel: "stylesheet", href: "css/normalize.css"}
  %link{rel: "stylesheet", href: "css/foundation.css"}
  %link{rel: "stylesheet", href: "css/app.css"}
  %script{src: "js/vendor/custom.modernizr.js"}
%body
  .row
    .small-12.columns
    %h1 Flickr
  .row
    .small-2.large-4.columns
      %input#query{type: 'text', autofocus: true}
    .small-10.large-8.columns
      %input#search.button.small.round{type: 'button', value: 'Search Flickr'}
      %input#clear.button.small.round.alert{type: 'button', value: 'Clear Photos'}
      %input#deleteSelected.button.small.round.alert{type: 'button', value: 'Delete Selected Photos'}
      %input#save.button.small.round.success{type: 'button', value: 'Save Selected Photos'}
  .row
    .small-8.columns
      %h4.subheader Look For Images
      #photos
    .small-4.columns
      %h4.subheader Saved Images
      #saved-photos


  %script{src: 'js/vendor/jquery-1.10.2.js'}
  %script{src: 'js/vendor/foundation.min.js'}
  %script{src: 'js/vendor/underscore.js'}
  %script{src: 'js/app/app.js'}
