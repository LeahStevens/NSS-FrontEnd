extends ../template/layout

block content
    .row
      .small-12.columns
        h2 Songs
    .row
      .small-12.columns
        #songs
          each song in songs
            .song
              h3
                a(href='/songs/#{song.id}')= song.title
              audio(src='/audios/#{song.filename}', controls=true)
              img#bandArt(src='/images/#{song.art}')
              ul
                each genre in song.genres
                  li= genre.name

