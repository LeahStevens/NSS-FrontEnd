extends ../template/layout
include ../mixins/form-helper

block content
  .row
    .small-12.columns
      h2.subheader New Songs
  .row
    .small-12.columns
      form(action='/songs', method='post')
        fieldset
          legend New Song
          .row
            .small-6.columns
              mixin field( null,'title', 'Title', null, null, true)
            .small-3.columns
              mixin field(null, 'duration', 'Song Duration')
            .small-3.columns
              mixin field(null, 'art', 'Song Image')
          .row
            .small-12.columns
              mixin field(null,'filename', 'Filename')
          .row
            .small-12.columns
              label(for='lyrics') Lyrics:
              textarea#lyrics(name='lyrics', id='lyrics')
          .row
            .small-12.columns
              each genre in genres
                input(type='checkbox', value= genre.name, name='genre')
                  span= genre.name
          .row
            .small-2.columns.small-offset-8: a#pink.button.radius.alert.small.expand(href='/posts') Cancel
            .small-2.columns: button#lightgreen.radius.success.small.expand(type='submit') Add Song